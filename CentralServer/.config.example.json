{
  "debug": {
    "enabled": false
  },
  "logging": {
    "filepath": "./logs/centralserver.log",
    "max_bytes": 10485760,
    "backup_count": 5,
    "encoding": "utf-8",
    "log_format": "%(asctime)s:%(name)s:%(levelname)s:%(message)s",
    "date_format": "%d-%m-%y_%H-%M-%S"
  },
  "database": {
    "type": "sqlite",
    "config": { "filepath": "./centralserver.db" }
  },
  "object_store": {
    "type": "local",
    "config": {
      "filepath": "./data/"
    }
  },
  "authentication": {
    "signing_secret_key": "UPDATE_THIS_VALUE",
    "refresh_signing_secret_key": "UPDATE_THIS_VALUE",
    "encryption_secret_key": "UPDATE_THIS_VALUE",
    "signing_algorithm": "HS256",
    "encryption_algorithm": "A256GCM",
    "access_token_expire_minutes": 30,
    "refresh_token_expire_minutes": 10080
  },
  "security": {
    "allow_origins": ["http://localhost:8080"],
    "allow_credentials": true,
    "allow_methods": ["*"],
    "allow_headers": ["*"]
  }
}
