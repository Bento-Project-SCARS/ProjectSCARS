{
  "debug": {
    "enabled": false,
    "use_test_db": false
  },
  "logging": {
    "filepath": "./logs/centralserver.log",
    "max_bytes": 10485760,
    "backup_count": 5,
    "encoding": "utf-8",
    "log_format": "%(asctime)s:%(name)s:%(levelname)s:%(message)s",
    "date_format": "%d-%m-%y_%H-%M-%S"
  },
  "database": {
    "db_type": "mysql",
    "db_driver": "pymysql",
    "username": "root",
    "password": "",
    "host": "localhost",
    "port": 3306,
    "database": "projectscars"
  },
  "test_database": {
    "filepath": "./tests/data/database.db"
  },
  "authentication": {
    "signing_secret_key": "UPDATE_THIS_VALUE",
    "refresh_signing_secret_key": "UPDATE_THIS_VALUE",
    "encryption_secret_key": "UPDATE_THIS_VALUE",
    "signing_algorithm": "HS256",
    "encryption_algorithm": "A256GCM",
    "access_token_expire_minutes": 30,
    "refresh_token_expire_minutes": 10080
  },
  "security": {
    "allow_origins": ["http://localhost:3000"],
    "allow_credentials": true,
    "allow_methods": ["*"],
    "allow_headers": ["*"]
  }
}
