{
    "emulators": {
        "auth": {
            "port": 9099
        },
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8080
        },
        "storage": {
            "port": 9199
        },
        "ui": {
            "enabled": true
        },
        "singleProjectMode": true
    },
    "firestore": {
        "rules": "firebase/firestore.rules",
        "indexes": "firebase/firestore.indexes.json"
    },
    "functions": [
        {
            "source": "firebase/functions",
            "codebase": "default",
            "ignore": ["venv", ".venv", ".git", "firebase-debug.log", "firebase-debug.*.log", "*.local"]
        }
    ],
    "storage": {
        "rules": "firebase/storage.rules"
    }
}
